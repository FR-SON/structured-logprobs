{
    "type": "json_schema",
    "json_schema": {
        "name": "answears",
        "description": "Response to questions in JSON format",
        "schema": {
            "type": "object",
            "properties": {
                "capital_of_France": { "type": "string" },
                "the_two_nicest_colors": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["red", "blue", "green", "yellow", "purple"]
                    }
                },
                "die_shows": { "type": "integer" }
            },
            "required": [
                "capital_of_France",
                "the_two_nicest_colors",
                "die_shows"
            ],
            "additionalProperties": false
        },
        "strict": true
    }
}
